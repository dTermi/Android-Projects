<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

 <HorizontalScrollView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User_Information">

       <TextView
           android:id="@+id/tv_bp_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="30dp"
           android:text="BLOOD PRESSURE"
           android:textSize="35sp"
           android:textColor="#ffffff"
           android:fontFamily="@font/orbitron">
       </TextView>

        <TextView
            android:id="@+id/tv_bp_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bp_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="B.P. Level"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <EditText
            android:id="@+id/et_bp_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_cnt"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_cnt"
            android:paddingLeft="10dp"
            android:hint="e.g. 100"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp"
            android:inputType="number">
        </EditText>

        <TextView
            android:id="@+id/tv_bp_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_cnt"
            app:layout_constraintLeft_toRightOf="@id/et_bp_level1"
            app:layout_constraintRight_toLeftOf="@id/et_bp_level2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:text="/"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <EditText
            android:id="@+id/et_bp_level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_cnt"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_slash"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:hint="e.g. 100"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp"
            android:inputType="number">
        </EditText>

        <TextView
            android:id="@+id/tv_bp_sistolict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bp_cnt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:text="Systolic B.P."
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <TextView
            android:id="@+id/tvtv_bp_sistolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_sistolict"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_sistolict"
            android:layout_marginRight="50dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:hint="e.g. 100"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_diastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bp_sistolict"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:text="Diastolic B.P."
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <TextView
            android:id="@+id/tvtv_bp_diastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_diastolic"
            android:hint="e.g. 100"
            android:textColor="#000000"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_diastolic"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_ideal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bp_diastolic"
            app:layout_constraintLeft_toLeftOf="@id/tv_bp_cnt"
            android:layout_marginTop="80dp"
            android:text="IDEAL  B.P."
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <TextView
            android:id="@+id/et_bp_ideal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_ideal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_ideal"
            android:paddingRight="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp"
            android:text=" 120/80 mmHg"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bp_ideal"
            app:layout_constraintLeft_toLeftOf="@id/tv_bp_cnt"
            android:layout_marginTop="80dp"
            android:text="Variation"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_sys_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_change"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_change"
            android:textColor="#000000"
            android:hint="e.g. 100"
            android:paddingRight="10dp"
            android:layout_marginRight="145dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp"
            android:inputType="number">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_slash_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_change"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_sys_change"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:text="/"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron">
        </TextView>

        <TextView
            android:id="@+id/tv_bp_dia_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_bp_change"
            android:paddingLeft="10dp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:hint="e.g. 100"
            app:layout_constraintLeft_toRightOf="@id/tv_bp_slash_change"
            android:layout_marginRight="35dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tv_round_corners_with_white_background"
            android:textSize="25sp"
            android:inputType="number">
        </TextView>

     <Button
         android:id="@+id/btn_enter"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="enter"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@id/tv_bp_change"
         android:layout_marginTop="50dp"
         android:layout_marginBottom="20dp"
         android:textSize="20sp"
         android:textColor="#000000"
         android:fontFamily="@font/orbitron"
         android:background="@drawable/tv_round_corners_with_white_background">
     </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

 </HorizontalScrollView>

</ScrollView>