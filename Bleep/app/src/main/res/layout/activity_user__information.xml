<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User_Information">

        <TextView
            android:id="@+id/tv_title_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:text="User Information"
            android:textSize="40sp"
            android:fontFamily="@font/orbitron"
            android:textColor="#ffffff">
        </TextView>

        <EditText
            android:id="@+id/et_usr_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_user_info"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="50dp"
            android:hint="Full Name"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:hint="Gender"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:hint="Date Of Birth"
            android:inputType="date"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_dob"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_blood_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_age"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:hint="Blood Group"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_blood_grp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:hint="Enter Email"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_mail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <EditText
            android:id="@+id/et_usr_info_reenter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_pasword"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:hint="Re-enter Password"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColorHint="#191970"
            android:textSize="25sp"
            android:fontFamily="@font/gudea_regular"
            android:background="@drawable/tv_round_corners_with_white_background">
        </EditText>

        <Button
            android:id="@+id/btn_usr_info_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_usr_info_reenter_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="submit"
            android:textColor="#ffffff"
            android:background="@drawable/rad_btn">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>